    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect_Magazin_Mobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
 Title="Home"
